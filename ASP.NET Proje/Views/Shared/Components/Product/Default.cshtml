@model DataViewModel
@{
    decimal discountedPrice = 0;
}

@foreach (var item in Model.Products)
{

    { discountedPrice = item.Price - (item.Price * item.Campaign.Discount / 100); }

    <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
        <div class="product-item bg-light mb-4">
            <div class="product-img position-relative overflow-hidden">
                <img class="img-fluid w-100" src="~/assets/img/@item.ImagePath" alt="">
                <div class="product-action">
                    <a data-id="@item.Id" class="btn btn-outline-dark btn-square basket-btn" href=""><i class="fa fa-shopping-cart"></i>Add To Cart</a>  
                    <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-sync-alt"></i>View Detail</a>
                </div>
            </div>
            <div class="text-center py-4">
                <a class="h6 text-decoration-none text-truncate" href="">@item.Name</a>
                <div class="d-flex align-items-center justify-content-center mt-2">
                    <h6>$@discountedPrice</h6><h6 class="text-muted ml-2"><del>$@item.Price</del></h6>
                </div>
                <div class="d-flex align-items-center justify-content-center mb-1">
                    <small id="badge-@item.Id" class="fa fa-star text-primary mr-1"></small>
                    <small class="fa fa-star text-primary mr-1"></small>
                    <small class="fa fa-star text-primary mr-1"></small>
                    <small class="fa fa-star text-primary mr-1"></small>
                </div>
            </div>
        </div>
    </div>
}   