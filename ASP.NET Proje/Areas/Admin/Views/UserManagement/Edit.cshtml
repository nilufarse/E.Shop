@model ASP.NET_Proje.Areas.Admin.ViewModel.UserManagmentViewModel

@{ ViewData["Title"] = "Edit"; }

<div class="container p-5">
    <h2 class="text-light">Edit</h2>
    <div class="form-group">
        <form method="post" asp-action="Edit">
            <div class="form-group">
                <label class="form-control">UserName</label>
                <input required asp-for="UserName" class="form-control text-white" />
            </div>
            <div class="form-group">
                <label class="form-control">Email</label>
                <input required asp-for="Email" class="form-control text-white" />
            </div>
            <div class="form-group">
                <label class="form-control">Password</label>
                <textarea class="form-control" asp-for="Password"></textarea>
            </div>
            <div class="form-group">
                <label class="form-control">EmployeeId</label>
                <textarea class="form-control" asp-for="EmployeeId"></textarea>
            </div>
            <input class="btn btn-outline-light" type="submit" value="Edit" />
        </form>
    </div>
</div>
