@model IEnumerable<Gender>

<div class="col-lg-12 grid-margin stretch-card services">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categorys</h4>
            <p class="card-description">
                Add Gender <code> <a class="btn btn-light" asp-action="GenderAdd">Create Gender</a></code>
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                <td>@item.Name</td>
                                <td>
                                    <a asp-action="GenderDelete" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>