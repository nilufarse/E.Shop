@model Category
@{
    Layout = "_Layout";
}

<div class="container p-5">
    <h2 class="text-light">Create Category</h2>


    <div class="form-group">
            <div class="form-group">
                <label class="form-control">Name</label>
                <input readonly required asp-for="Name" class="form-control text-white" />
            </div>
            <div class="form-group">
                <label class="form-control">CreatedDate</label>
                <input readonly required asp-for="CreatedDate" class="form-control text-white" />
            </div>


            @if(Model.UpdatedDate != null){
                <div class="form-group">
                    <label class="form-control">UpdatedDate</label>
                    <input readonly required asp-for="UpdatedDate" class="form-control text-white" />
                </div>
            }
      
        <a class="btn btn-success" asp-action="index">Back</a>
    </div>

</div>