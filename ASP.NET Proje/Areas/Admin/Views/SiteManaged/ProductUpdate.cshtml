@model Product

@{
    Layout = "_Layout";

}

@section addcss{
    <style>
        input, select {
            color: white !important;
        }

        .label-situation {
            font-size: 5rem;
            background-color: transparent;
            border: none;
            text-align: center;
            position: relative !important;
        }

        .input-situation {
            opacity: 0 !important;
            background-color: transparent;
            position: absolute !important;
            height: 500px !important
        }

        #plus {
            position: absolute;
        }
    </style>
}
<div class="container p-5">
    <h2 class="text-light">Create Image</h2>
    <form method="post" asp-action="ProductUpdate">
        <div class="row">
            <div class="col-md-6 form-group label-situation" style="display: flex; justify-content: center; align-items: center;">
                <label id="plus" class="form-control" for="file" style="font-size:8rem; background-color:transparent; border:none; text-align:center;">
                    +
                </label>
                <input class="input-situation custom-file-input" type="file" id="createdImage file" name="file" width="500" height="500" style="opacity:0;">
                <img src="~/assets/img/@Model.ImagePath" id="createdImage" width="500" height="500" style="display:block;" />
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-control" for="name">Name</label>
                    <input asp-for="Id" value="@Model.Id" type="hidden" />
                    <input type="hidden" asp-for="ImagePath" value="@Model.ImagePath" />
                    <input id="name" required asp-for="Name" class="form-control text-white" />
                </div>
                <div class="form-group">
                    <label class="form-control" for="name">Price</label>
                    <input id="name" required asp-for="Price" class="form-control text-white" />
                </div>
                <div class="form-group">
                    <label class="form-control">Description</label>
                    <textarea rows="10" cols="50" required asp-for="Description" class="form-control text-white"> </textarea>
                </div>
                <div class="form-group">
                    <label class="form-control">Gender</label>
                    <select required id="city" class="form-control" asp-for="GenderId" asp-items="@ViewBag.Gender"></select>
                </div>
                <div class="form-group">
                    <label class="form-control">Category</label>
                    <select required id="city" class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Category"></select>
                </div>
                <div class="form-group">
                    <label class="form-control">Campaign</label>
                    <select required id="city" class="form-control" asp-for="CampaignId" asp-items="@ViewBag.Campaign"></select>
                </div>
                <input class="btn btn-outline-light" type="submit" value="Add" />
            </div>
        </div>
    </form>
</div>
