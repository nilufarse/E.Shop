@model Campaign
@{
    Layout = "_Layout";
}

<div class="container p-5">
    <h2 class="text-light">Create Social</h2>


    <div class="form-group">
        <form method="post" asp-action="CampaignUpdate">
            <div class="form-group">
                <label class="form-control">Name</label>
                <input required asp-for="Name" class="form-control text-white" />
            </div>

            <div class="form-group">
                <label class="form-control">Discount</label>
                <input required asp-for="Discount" class="form-control text-white" />
            </div>
            <div class="form-group">
                <label class="form-control">Description</label>
                <textarea class="form-control" asp-for="Description"></textarea>
            </div>
            <input class="btn btn-outline-light" type="submit" value="Save" />
        </form>
    </div>

</div>