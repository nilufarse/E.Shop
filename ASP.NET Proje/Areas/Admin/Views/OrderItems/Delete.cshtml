@model ASP.NET_Proje.Models.Entity.OrderItem

@{
    ViewData["Title"] = "Delete";

}

<div class="container p-5">
    <h2 class="text-light">Delete OrderItem</h2>
    <div class="form-group">
        <form method="post" asp-action="Delete">
            <div class="form-group">
                <label class="form-control">Order</label>
                <input required asp-for="OrderId" class="form-control text-white" />
            </div>
            <div class="form-group">
                <label class="form-control">ProductId</label>
                <input required asp-for="ProductId" class="form-control text-white" />
            </div>
            <div class="form-group">
                <label class="form-control">ProductCount</label>
                <input required asp-for="ProductCount" class="form-control text-white" />
            </div>
            <input class="btn btn-outline-light" type="submit" value="Delete" />
        </form>
    </div>
</div>
