@model IEnumerable<ASP.NET_Proje.Models.Entity.OrderItem>

@{
    ViewData["Title"] = "Index";

}

<div class="col-lg-12 grid-margin stretch-card services">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">OrderItem</h4>
            <p class="card-description">
                <code> <a class="btn btn-light" asp-action="Create">Create OrderItem</a></code>
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Order</th>
                            <th>ProductId</th>
                            <th>ProductCount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.OrderId</td>
                            <td>@item.ProductId</td>
                            <td>@item.ProductCount</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
