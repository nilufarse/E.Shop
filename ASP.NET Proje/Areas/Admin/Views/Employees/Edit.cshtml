@model ASP.NET_Proje.Models.Entity.Employee

@{
    ViewData["Title"] = "Edit";

}
<div class="container p-5">
    <h2 class="text-light">Edit Employee</h2>
    <div class="form-group">
        <form method="post" asp-action="Edit">
            <div class="form-group">
                <label class="form-control">Name</label>
                <input required asp-for="Name" class="form-control text-white" />
            </div>
            <div class="form-group">
                <label class="form-control">SurName</label>
                <input required asp-for="SurName" class="form-control text-white" />
            </div>
            <div class="form-group">
                <label class="form-control">StartDate</label>
                <input required asp-for="StartDate" class="form-control text-white" />
            </div>
            <input class="btn btn-outline-light" type="submit" value="Edit" />
        </form>
    </div>
</div>
