@model ASP.NET_Proje.Models.Entity.Order

@{
    ViewData["Title"] = "Delete";

}
<div class="container p-5">
    <h2 class="text-light">Delete Order</h2>
    <div class="form-group">
        <form method="post" asp-action="Delete">
            <div class="form-group">
                <label class="form-control">User</label>
                <input required asp-for="UserId" class="form-control text-white" />
            </div>
            <div class="form-group">
                <label class="form-control">OrderDate</label>
                <input required asp-for="OrderDate" class="form-control text-white" />
            </div>
            <div class="form-group">
                <label class="form-control">Address</label>
                <input required asp-for="Address" class="form-control text-white" />
            </div>
            <input class="btn btn-outline-light" type="submit" value="Delete" />
        </form>
    </div>
</div>
