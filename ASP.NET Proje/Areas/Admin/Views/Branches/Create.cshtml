@model ASP.NET_Proje.Models.Branch

@{
    ViewData["Title"] = "Create";
}


<div class="container p-5">
    <h2 class="text-light">Create Branch</h2>
    <div class="form-group">
        <form method="post" asp-action="Create">
            <div class="form-group">
                <label class="form-control">Store</label>
                <input required asp-for="StoreId" class="form-control text-white" />
            </div>
            @*<div class="form-group">
                <label class="form-control">Store</label>
                <select class="form-control" asp-for="StoreId" asp-items="Model.Store"></select>
            </div>*@
            <div class="form-group">
                <label class="form-control">Name</label>
                <input required asp-for="Name" class="form-control text-white" />
            </div>
            <div class="form-group">
                <label class="form-control">Description</label>
                <input required asp-for="Description" class="form-control text-white" />
            </div>
            <input class="btn btn-outline-light" type="submit" value="Save" />
        </form>
    </div>
</div>